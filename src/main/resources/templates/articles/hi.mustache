{{>layouts/header}}

    <form action="/articles/create" method="post">
        제목 : <input name="bname" /> <br/>
        내용 : <input name="bcontent"/>
        <button type="submit"> 등록 </button>
    </form>


    <table>
        <thead>
        <tr>
            <th> 번호 </th>
            <th> 제목 </th>
            <th> 내용 </th>
        </tr>
        </thead>
        <tbody>
            {{#articleList}}
            <tr>
                <td><a href="/articles/{{bno}}">{{bno}}</a></td>
                <td><a href="/articles/{{bno}}">{{bname}}</a></td>
                <td><a href="/articles/{{bno}}">{{bcontent}}</a></td>
            </tr>
            {{/articleList}}
        </tbody>
    </table>

{{>layouts/footer}}